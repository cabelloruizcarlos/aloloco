<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <es.ccrr.aloloco.ui.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_join_title"
            android:textSize="20sp" />

        <es.ccrr.aloloco.ui.components.CustomEditText
            android:id="@+id/emailView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:inputType="textEmailAddress"
            custom:text="@string/login_email" />

        <es.ccrr.aloloco.ui.components.CustomEditText
            android:id="@+id/passwordView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:inputType="textPassword"
            custom:text="@string/login_password" />

        <es.ccrr.aloloco.ui.components.CustomButton
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/list_item_margin"
            android:layout_marginBottom="@dimen/list_item_margin"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:background="@drawable/white_button"
            android:gravity="center" />

        <es.ccrr.aloloco.ui.components.CustomTextView
            android:id="@+id/forgotPasswordView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="@dimen/list_item_margin"
            android:paddingEnd="20dp"
            android:paddingBottom="@dimen/list_item_margin"
            android:text="@string/login_forgot_password" />

    </LinearLayout>
</ScrollView>